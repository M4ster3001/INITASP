@model CRUD.Models.Entidades.Usuario

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Usuario</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.id)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.id)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.user_name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.user_name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.num_age)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.num_age)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.flg_type)
        </dt>
        <dd class="col-sm-10">
            @if (Model.flg_type == 1)
            {
                <label>Administrador</label>
            }
            else
           if (Model.flg_type == 2)
            {
                <label>Técnico</label>
            }
            else
           if (Model.flg_type == 3)
            {
                <label>Usuário comum</label>
            }
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("Edit", "Edit", new { id = Model.id }) |
    <a asp-action="Index">Back to List</a>
</div>
